<br/>
<div class = "box col-10 offset-1" >
  <h1>Edit Course Details</h1>

  <%= simple_form_for @course , url: instructor_course_path(@course), html: {method: 'patch'} do |f| %>
    <%= f.input :title, input_html: { maxlength: 75 }%>
    <%= f.input :description, input_html: { maxlength: 200 }, hint: 'Note: 200 Max Length' %>
    <%= f.input :category, collection: Course::CATEGORIES %>

    <%= f.submit "Update", class:'btn btn-primary' %>

  <% end %>


</div>