<br/>




<div class = "col-8 offset-2">

  <% if current_user && current_user == @course.user %>
    <div style = 'text-align: right;'>
      
      <%= link_to 'Switch to Instructor View', instructor_course_path(@course), class: 'btn btn-outline-primary round' %>

    </div>
  <% end %>
  
  <br/>

  <h1> <%= @course.title %>  </h1>
  <p> <%= @course.description %> </p>
  <div class="badge badge-pill badge-danger"><%= @course.category %></div>
  <div>
    <span class = "text-muted" style = "font-size: 10px;"> By <span class = "font-weight-bold"><%= @course.user.email %></span>, created on <%= @course.created_at.strftime("%B %d, %Y") %></span>
  <div>
  
  <br/>
  <br/>

  <div class="accordion" id="accordionExample">
    
    <% @course.sections.each do |section| %>
      
        <div class="card-header" id="heading<%= section.id %>">
          <h2 class="mb-0">
            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#<%= section.id %>" aria-expanded="false" aria-controls="<%= section.id %>">
            <%= section.title %>           
            </button>
          </h2>
        </div>

        <div id="<%= section.id %>" class="collapse " aria-labelledby="heading<%= section.id %>" data-parent="#accordionExample">
          <div class="card-body">
              <h5> <%= section.content %></h5>
              
          </div>
        </div>    
    <% end %>

  </div>
</div>